<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5D7D7"
    tools:context=".UserMainInterface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mainUILogo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/pngegg" />

                <Button
                    android:id="@+id/fixedButton"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="#DA8181"
                    android:layout_gravity="center"
                    android:text="Book Now"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:icon="@drawable/baseline_add_24"
                    app:iconSize="50dp" />


            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10sp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/profileButton"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:backgroundTint="#FFBFBF"
                android:backgroundTintMode="add"
                android:isScrollContainer="false"
                android:text="   My Profile"
                android:textColor="#DA8181"
                android:textSize="20dp"
                app:icon="@drawable/pngtreevector_edit_profile_icon_4102538"
                app:iconGravity="textEnd"
                app:iconPadding="98dp"
                app:iconSize="70dp" />

            <Button
                android:id="@+id/servicesButton"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:backgroundTint="#FFBFBF"
                android:isScrollContainer="false"
                android:text="Services"
                android:textColor="#DA8181"
                android:textSize="20dp"
                app:icon="@drawable/pngegg__5_"
                app:iconGravity="textEnd"
                app:iconPadding="115dp"
                app:iconSize="50dp" />

            <Button
                android:id="@+id/petsButton"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:backgroundTint="#FFBFBF"
                android:isScrollContainer="false"
                android:text="   My Pets"
                android:textColor="#DA8181"
                android:textSize="20dp"
                app:icon="@drawable/pngegg__6_"
                app:iconGravity="textEnd"
                app:iconPadding="113dp"
                app:iconSize="70dp" />

            <Button
                android:id="@+id/appointmentButton"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:backgroundTint="#FFBFBF"
                android:isScrollContainer="false"
                android:text="Appointments"
                android:textColor="#DA8181"
                android:textSize="20dp"
                app:icon="@drawable/pngegg__7_"
                app:iconGravity="textEnd"
                app:iconPadding="70dp"
                app:iconSize="50dp" />



            <Button
                android:id="@+id/aboutButton"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:backgroundTint="#FFBFBF"
                android:isScrollContainer="false"
                android:text="About Us"
                android:textColor="#DA8181"
                android:textSize="20dp"
                app:icon="@drawable/pngegg__2_"
                app:iconGravity="textEnd"
                app:iconPadding="115dp"
                app:iconSize="50dp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="17dp"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="50sp"
                app:srcCompat="@drawable/pngegg__1_" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>